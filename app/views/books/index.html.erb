<html>
<head>
<style>
body {
  background-color: #E6E6FA;
}
</style>
</head>
<body>

<%= form_tag(search_path, :method => "get") do %>
<div class="input-group">
	<%= search_field_tag :search, params[:search], placeholder: "Znajdź książkę ", class: "form-control" %>
	<div class="input-group-btn">
		<%= button_tag "Szukaj", :class => 'btn btn-info glyphicon glyphicon-search', 
    :title => nil%>
	</div>
</div>
<% end %>


    <h1>Książki:</h1>
<ul>
  <% @books.each do |book| %>
    <li>
     <a href="/books/<%= book.id %>">
        <%= book.title %>
      </a>
    </li>
  <% end %>
</ul>

 <p><%= link_to "Strona główna", welcome_path %></p>
 <%= link_to "Dodaj książkę", newbook_path %>

</body>

